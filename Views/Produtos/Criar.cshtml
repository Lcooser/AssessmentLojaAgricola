@model AgricolaLoja.Models.ProdutosModel
@using AgricolaLoja.Enums

@{
    ViewData["Title"] = "Criar prdotuo";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar produto</h1>
</div>

<form asp-controller="Produtos" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
        <span asp-validation-for="Nome" class="text-danger"></span>
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Nome" class="form-label">Categoria</label>
        <input type="text" asp-for="Categoria" class="form-control" placeholder="Digite a categoria do produto" />
        <span asp-validation-for="Categoria" class="text-danger"></span>
        @Html.ValidationMessageFor(x => x.Categoria)
    </div>

    <div class="form-group">
        <label for="Descicao" class="form-label">Descricao</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição do produto" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>

    <div class="form-group">
        <label for="Valor" class="form-label">Valor</label>
        <input type="text" asp-for="Valor" class="form-control" placeholder="Digite o valor do produto" />
        <span asp-validation-for="Valor" class="text-danger"></span>
        @Html.ValidationMessageFor(x => x.Valor)
    </div>

    <div class="form-group">
        <label for="DataDeLancamento" class="form-label">Data de lançamento</label>
        <input type="text" asp-for="DataDeLancamento" class="form-control" placeholder="Digite a data de lançamento" />
        <span asp-validation-for="DataDeLancamento" class="text-danger"></span>
        @Html.ValidationMessageFor(x => x.DataDeLancamento)
    </div>

    

  

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Produtos" role="button">Voltar</a>
</form>
