    }

    .container {
        margin: 40px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .company-name {
        color: #007bff;
    }

    .company-section {
        margin-bottom: 30px;
    }

    .section-title {
        color: #28a745;
    }

    .lead {
        font-size: 1.2em;
        line-height: 1.6;
    }

    .company-footer {
        color: #6c757d;
    }
</style>